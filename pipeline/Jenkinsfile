pipeline {
    agent {
        kubernetes {
          yaml '''
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: jworker
                image: jenkins/jnlp-agent-python3:latest
                command:
                - /bin/sh
                - -c
                - 'while true; do sleep 10; done'
                tty: true
          '''
        }
    }
    stages {
        stage('Test') {
            steps {
                sh 'ls -l /usr/local/bin/'
            }
        }
    }
}